    "lint": "eslint . && npm run format:check",
    "test": "mocha tests/unit/ --recursive --reporter spec"
  },
  "author": "Lingyan Zhu <lingyan@yahoo-inc.com",
  "licenses": [
    {
      "type": "BSD",
      "url": "https://github.com/yahoo/routr/blob/master/LICENSE.md"
    }
  ],
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  },
  "devDependencies": {
    "chai": "^4.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^7.29.0",
    "istanbul": "^0.4.5",
    "mocha": "^9.0.1",
    "pre-commit": "^1.0.7",
    "prettier": "^2.3.2",
    "sinon": "^11.1.1"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
